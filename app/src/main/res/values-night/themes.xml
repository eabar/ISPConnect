<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ISPConnect" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors for dark mode -->
        <item name="colorPrimary">@color/blue</item> <!-- Primary color (same as light mode for consistency) -->
        <item name="colorPrimaryDark">@color/black</item> <!-- Darker variant for primary elements -->
        <item name="colorAccent">@color/light_blue</item> <!-- Accent color for highlights -->
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlNormal">@color/white</item>

        <!-- Background and text colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_blue</item>

        <!-- TabLayout Customization -->
        <item name="tabIndicatorColor">@color/light_blue</item>
        <item name="tabSelectedTextColor">@color/light_blue</item>
        <item name="tabTextColor">@color/white</item>
    </style>
</resources>
